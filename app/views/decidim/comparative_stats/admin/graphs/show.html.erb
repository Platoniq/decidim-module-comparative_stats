<div class="card" id="translation_sets">
  <div class="item_show__header">
    <h2 class="item_show__header-title">
      <%= t(".title") %>
      <div class="flex align-left gap-x-4">
        <% if allowed_to?(:index, :endpoint) %>
          <%= link_to decidim_admin_comparative_stats.endpoints_path, class: "button button__sm button__secondary" do %>
            <%= t("menu.endpoints", scope: "decidim.comparative_stats.admin") %>
          <% end %>
        <% end %>
      </div>
    </h2>
  </div>
</div>

<% if active_endpoints.any? %>
  <%= render partial: "decidim/comparative_stats/widgets/tabs" %>
<% else %>
  <%= t ".no_endpoints" %>
<% end %>
