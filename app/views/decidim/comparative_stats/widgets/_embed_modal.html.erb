<div class="flex flex-row">
    <button class="flex flex-row items-center button button__sm button__secondary" data-open="processEmbed">
      <%= t("embed_link", scope: "decidim.shared.embed_modal") %>
      <%= icon "link", class: "icon--after ml-2" %>
    </button>
    <%= link_to url, class: "flex flex-row items-center button button__sm button__secondary ml-4" do %>
      <%= t(".fullscreen") %>
      <%= icon "eye-line", class: "icon--after ml-2" %>
    <% end %>
</div>

<div class="reveal reveal--embed" id="processEmbed" data-reveal>
  <div class="reveal__header">
    <h3 class="reveal__title"><%= t("embed", scope: "decidim.shared.embed_modal") %>:</h3>
    <button class="close-button" data-close aria-label="<%= t("close_window", scope: "decidim.shared.embed_modal") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <p class="embed__code">
    <%= embed_code %>
  </p>
</div>
